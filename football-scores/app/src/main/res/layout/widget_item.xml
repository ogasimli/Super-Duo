<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:background="#ffffff">

    <TextView
            android:id="@+id/home_team_name"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#111111"
            tools:text="Manchester City"/>

    <ImageView
            android:id="@+id/home_team_crest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/widget_team_crest_height"
            android:layout_marginLeft="@dimen/widget_team_crest_margin"
            android:layout_marginStart="@dimen/widget_team_crest_margin"
            android:src="@drawable/placeholder_crest"
            android:contentDescription="@string/description_home_team_crest"/>

    <TextView
            android:id="@+id/match_score"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#111111"
            android:textStyle="bold"
            tools:text="2 - 1"/>

    <ImageView
            android:id="@+id/away_team_crest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/widget_team_crest_height"
            android:layout_marginRight="@dimen/widget_team_crest_margin"
            android:layout_marginEnd="@dimen/widget_team_crest_margin"
            android:src="@drawable/placeholder_crest"
            android:contentDescription="@string/description_away_team_crest"/>

    <TextView
            android:id="@+id/away_team_name"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="#111111"
            tools:text="Chelsea"/>

</LinearLayout>